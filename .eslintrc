---
  env:
    browser: true
    node: true
    mocha: true
  rules:
    quotes:
      - 2
      - "single"
    space-before-function-paren:
      - 2
      -
        anonymous: "always"
        named: "never"
    strict:
      - 2
      - "global"
    camelcase: 2
    indent:
      - 2
      - 2
      -
        indentSwitchCase: true
    eqeqeq: 2
    default-case: 2
    key-spacing:
      - 2
      -
        beforeColon: false
        afterColon: true
    no-eval: 2
    no-else-return: 2
    no-fallthrough: 2
    no-extend-native: 2
    no-use-before-define: 0
    no-trailing-spaces: 2
    no-mixed-spaces-and-tabs: 2
